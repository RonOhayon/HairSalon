<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HairSalonSetUp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/header"
            android:orientation="vertical"
            android:background="@drawable/header"
            android:gravity="center">

            <ImageView
                android:id="@+id/HairSet_IMG_BackB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_back_button"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hair Salon Setting"
                android:textSize="35dp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_weight="4"
                android:id="@+id/HairSet_LBL_title"
                />
        </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:layout_below="@id/header"
               android:id="@+id/menuLayot">

               <LinearLayout
                   android:id="@+id/rightLayout"
                   android:layout_height="wrap_content"
                   android:layout_width="0dp"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:gravity="center">

                       <ImageView
                           android:id="@+id/HairSet_IMG_hairDye"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/img_hairdye"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Hair Dye"
                           android:textStyle="bold"
                           android:id="@+id/HairSet_LBL_dye"
                           />

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/HairSet_TIP_HairDye"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           app:errorEnabled="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:hint="set price"
                               android:inputType="text"
                               />
                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:gravity="center">

                       <ImageView
                           android:id="@+id/HairSet_IMG_hairDry"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/img_hairdryer"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="straightening Hair"
                           android:textStyle="bold"
                           android:id="@+id/HairSet_LBL_straightHair"
                           />

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/HairSet_TIP_straighteningHair"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           app:errorEnabled="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:hint="set price"
                               android:inputType="text" />
                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/LeftLayout"
                   android:layout_height="wrap_content"
                   android:layout_width="0dp"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:gravity="center">

                       <ImageView
                           android:id="@+id/HairSet_IMG_maleH"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/img_haircut"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Haircut"
                           android:textStyle="bold"
                           android:id="@+id/HairSet_LBL_haircut"
                           />

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/HairSet_TIP_maleH"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           app:errorEnabled="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:hint="set price"
                               android:inputType="text"
                               />
                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:gravity="center">

                       <ImageView
                           android:id="@+id/HairSet_IMG_shave"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/img_shave"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Shave"
                           android:textStyle="bold"
                           android:id="@+id/HairSet_LBL_shave"
                           />

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/HairSet_TIP_shave"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           app:errorEnabled="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:hint="set price"
                               android:inputType="text"
                               />
                       </com.google.android.material.textfield.TextInputLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:gravity="center">

                       <ImageView
                           android:id="@+id/HairSet_IMG_pin"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/img_pin_drop"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Location"
                           android:textStyle="bold"
                           android:id="@+id/HairSet_LBL_location"
                           />

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/HairSet_TIP_pin"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           app:errorEnabled="true">

                           <com.google.android.material.textfield.TextInputEditText
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:hint="press to set"
                               android:inputType="text"
                               />
                       </com.google.android.material.textfield.TextInputLayout>
                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>

           <Space
               android:layout_width="match_parent"
               android:layout_height="20dp"
               android:layout_below="@id/menuLayot"
               android:id="@+id/space1"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/space1"
               android:text="Update"
               android:id="@+id/HairSet_BTN_update"
               />


       </RelativeLayout>
    </ScrollView>
</RelativeLayout>