<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationSetUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:id="@+id/header"
        android:orientation="vertical"
        android:background="@drawable/header"
        android:gravity="center">

        <ImageView
            android:id="@+id/ls_IMG_BB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back_button"
            android:layout_gravity="left"
            android:layout_weight="1"/>

    <ImageView
        android:id="@+id/ls_IMG_pin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/img_pin_drop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

    </ImageView>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lls_LBL_name"
        android:layout_alignBottom="@+id/ls_IMG_pin"
        android:fontFamily="cursive"
        android:text="Set your Location"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_weight="2">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">
        >
        <FrameLayout
            android:id="@+id/ls_LAY_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:layout_margin="24dp"
            android:background="#CD151315">
        </FrameLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ls_EDT_search"
            >

        </EditText>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/midLayout"
            android:layout_marginBottom="50dp"
            android:text="set Location"
            android:id="@+id/ls_BTN_set"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>